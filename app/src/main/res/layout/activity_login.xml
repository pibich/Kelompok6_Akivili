<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_akivili"
        android:layout_marginTop="-50dp"/>

    <TextView
        android:id="@+id/loginMemberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Member"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan menggunakan akun yang sudah terdaftar"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/emailErrorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Email tidak ditemukan atau salah"
        android:textColor="@color/redlink"
        android:visibility="gone"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/passwordErrorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Password salah"
        android:textColor="@color/redlink"
        android:visibility="gone"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/generalErrorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/redlink"
        android:textSize="14sp"
        android:visibility="gone"
        android:gravity="center"/>

    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? Register di sini"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="150dp"/>

</LinearLayout>
